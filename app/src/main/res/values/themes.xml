<resources>
    <!-- Base application theme. -->
    <style name="Theme.Term_Tracker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/forest_green</item>
        <item name="colorPrimaryVariant">@color/pipe_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_500</item>
        <item name="colorSecondaryVariant">@color/purple_200</item>
        <item name="colorOnSecondary">@color/yellow_alt</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="editTextBackground">@color/white</item>
        <item name="android:editTextBackground">@color/white</item>
        <!--        <item name="android:background">@color/logo_background</item>-->
        <!--        <item name="android:actionBarItemBackground">@color/logo_background</item>-->
        <item name="android:colorBackground">@color/logo_background</item>

    </style>

    <style name="Theme.Term_Tracker.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.Term_Tracker.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Term_Tracker.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>